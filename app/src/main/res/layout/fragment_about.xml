<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".PokemonActivity.Fragments.AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/aboutFragment_type1_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintStart_toEndOf="@id/aboutFragment_pokemon_imageView"
                app:layout_constraintBottom_toTopOf="@id/aboutFragment_type2_imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:elevation="50dp"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/aboutFragment_type2_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="30dp"
                app:elevation="50dp"
                app:layout_constraintStart_toEndOf="@id/aboutFragment_pokemon_imageView"
                app:layout_constraintTop_toBottomOf="@id/aboutFragment_type1_imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/aboutFragment_pokemon_imageView"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/aboutFragment_pokemon_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:elevation="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:src="@tools:sample/avatars" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</FrameLayout>