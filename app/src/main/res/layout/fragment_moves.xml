<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context=".PokemonActivity.Fragments.LocationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/moves_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/scarlet"
            android:scaleX="1.5"
            android:scaleY="1.5"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/moves_RV"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/moves_filter_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/type_icon_background"
            android:backgroundTint="?colorPrimary"
            android:clickable="true"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_filter_alt_24"
            app:tint="?colorOnPrimary" />

        <include layout="@layout/empty_data_layout" />

    </RelativeLayout>

</FrameLayout>