<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".PokemonActivity.Fragments.MoreFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/moreFragment_link_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:alpha="0.8"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:textColor="?colorOnPrimary"
                android:drawableStart="@drawable/ic_outline_info_24"
                android:drawableTint="?colorOnPrimary"
                android:text="Find Out More"/>

            <include layout="@layout/base_stats_layout"/>

            <include layout="@layout/weaknesses_layout"/>

            <include layout="@layout/resistant_layout"/>

            <include layout="@layout/training_layout"/>

            <include layout="@layout/breeding_layout"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>